
{
    "name": "company4-dev/incremental-backups",
    "description": "A library that creates backups of the target repository.",
    "type": "project",
    "keywords": ["zip", "backup", "incremental"],
    "homepage": "https://github.com/company4-dev/incremental-backups",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Jas-n",
            "homepage": "https://company4.dev"
        }
    ],
    "minimum-stability": "stable",
    "support": {
        "issues": "https://github.com/company4-dev/incremental-backups/issues",
        "source": "https://github.com/company4-dev/incremental-backups"
    },
    "require": {
        "php": ">=8.1",
        "ext-zip": "*"
    },
    "autoload": {
        "psr-4": {
            "Company4\\Incrementor\\": "src/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "cp ./contrib/pre-push ./.git/hooks/pre-push",
            "chmod a+x ./.git/hooks/pre-push"
        ]
    }
}
